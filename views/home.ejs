<!DOCTYPE html>
<html>
    <head>
        <title>TodoList</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/0a006bd788.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="main.css">
        <meta name="viewport" content="width=device-width initial-scale=1">
    </head>
    <!-- Select the option what to do from list -->
    <body>
        <div class="container-fluid" id="main">
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-12">
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="jumbotron jumbotron-fluid">
                        <h1 class="display-4" style="text-align: center;">To Do List</h1>
                        <p class="lead" style="text-align: center;">Select the task that you want to perform</p>
                        <hr class="my-4">
                        <a class="btn btn-primary btn-lg" href="#" role="button" id="add" style="margin-left: 50px ;"> Add task to list</a>
                        <a class="btn btn-primary btn-lg" href="#" role="button" id="view" style="margin-left: 50px ;">View task from list</a>
                      </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12"></div>
            </div>
        </div>
        <!-- Add a new todo to list -->
        <div class="container-fluid" id="addtask">
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-12">
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="jumbotron">
                        <h1 style="text-align: center;" class="display-4">TODO List</h1>
                        <form action="/save" method="POST">
                            <div class="form-group">
                              <label for="task">Task To Do</label>
                              <input type="text" class="form-control" id="task" name="task" aria-describedby="emailHelp" required>
                              <small id="emailHelp" class="form-text text-muted">Enter the task to monitor</small>
                            </div>
                            <div class="form-group">
                              <label for="exampleInputPassword1">Catagory</label>
                              <div class="input-group mb-3">
                                <select class="custom-select" id="inputGroupSelect02" name="type" required> 
                                  <option value="Personal">Personal</option>
                                  <option value="Business">Business</option>
                                  <option value="Daily">Daily</option>
                                  <option value="School">School</option>
                                  <option value="Cleaning">Cleaning</option>
                                </select>
                              </div>
                            </div>
                            <div class="form-group">
                                <label for="date">Due Date</label>
                                <input type="date" class="form-control" id="task" name="date" aria-describedby="emailHelp">
                                <small id="emailHelp" class="form-text text-muted">Deadline for this task</small>
                         </div>
                            
                         <button type="submit" class="btn btn-danger"><i class="fas fa-plus"></i> &nbspAdd Task</button>
                         <button  class="btn btn-danger " id="close">Close</button>
                        </form>
                      </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12"></div>
            </div>
        </div>
        <!-- Display the exsisting todo list -->
        <div class="container-fluid" id="viewtask">
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-12"></div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="jumbotron">
                        <h1 class="display-4" style="text-align: center;">Pending Tasks</h1>
                        <% if(todo.length==0) { %>
                            <ul>
                                <li>Up To Date</li>
                            </ul>
        
                            <%}else{%>
                                <ul>
                                    <h4 style="text-align: center;">Total Tasks : <%= todo.length %></h4>
                                    <h4 style="text-align: center;">Tasks Completed :<span id="demo">&nbsp0</span></h4>
                                    <% for(let i of todo){ %>
                                        <li>
                                            <hr class="my-4">
                                            <div>
                                                
                                                <span><input type="checkbox" data-myid="<%= i.Myid%>">&nbsp&nbsp<h4 style="display: inline;" id="<%= i.Myid%>"><%=i.task %></h4></span>
                                                <span><a href="/delete/?delid=<%=i._id %>"><button class="btn btn-danger"><i class="fas fa-plus"></i> &nbspDelete</button></a>                                                </span>
                                            </div> 
                                            <div>
                                                <span><i class="fas fa-calendar-alt"></i>&nbsp&nbsp<%= i.date %></span>
                                                <span><button class="btn btn-primary"><%= i.type %></button></span>
                                            </div>  
                                        </li>
                                       <% }%> 

                                </ul>
                            
                        <%}%>
                        <button  class="btn btn-danger" id="close1">Close</button>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12"></div>
            </div>
        </div>





        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
        <script src="script.js"></script>
    </body>
</html>